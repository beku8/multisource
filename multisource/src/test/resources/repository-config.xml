<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource" class="com.fm.multisource.datasource.CustomerRoutingDataSource">
	   <property name="targetDataSources">
	      <map key-type="java.lang.Integer">
	         <entry key="2" value-ref="dataSource2"/>
	         <entry key="3" value-ref="dataSource3"/>
	      </map>
	   </property>
	   <property name="defaultTargetDataSource" ref="dataSource1"/>
	</bean>
	
	<bean id="parentDataSource"
	         class="org.springframework.jdbc.datasource.DriverManagerDataSource"
	         abstract="true">
	   <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
	   <property name="username" value="router"/>
	   <property name="password" value="router"/>
	</bean>
	 
	<bean id="dataSource1" parent="parentDataSource">
	   <property name="url" value="jdbc:mysql://localhost:3306/router_1?characterEncoding=UTF-8"/>
	</bean>
	 
	<bean id="dataSource2" parent="parentDataSource">
	   <property name="url" value="jdbc:mysql://localhost:3306/router_2?characterEncoding=UTF-8"/>
	</bean>
	 
	<bean id="dataSource3" parent="parentDataSource">
	   <property name="url" value="jdbc:mysql://localhost:3306/router_3?characterEncoding=UTF-8"/>
	</bean>
 


</beans>
