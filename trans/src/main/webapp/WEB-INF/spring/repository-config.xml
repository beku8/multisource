<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="parentDataSource" abstract="true" class="com.mchange.v2.c3p0.ComboPooledDataSource">
	    <property name="driverClass" value="com.mysql.jdbc.Driver"></property>
	    <property name="user" value="router"/>
	    <property name="password" value="router"/>
	    <property name="initialPoolSize" value="5"></property>
	    <property name="minPoolSize" value="5"></property>
	    <property name="maxPoolSize" value="15"/>
	    <property name="maxStatements" value="50"></property>
	    <property name="automaticTestTable" value="c3p0_test_table"></property>
	    <property name="idleConnectionTestPeriod" value="21600"></property> 
	</bean>
	 
	<bean id="dataSource" parent="parentDataSource">
	   <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/trans_db?characterEncoding=UTF-8"/>
	</bean>
	 
	<bean id="userDataSource" parent="parentDataSource">
	   <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/trans_login?characterEncoding=UTF-8"/>
	</bean>


	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean"
     p:dataSource-ref="dataSource" p:packagesToScan="com.fm.trans.domain">
     	<property name="hibernateProperties">
     		<props>
     			<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
     			<prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
     		</props>
     	</property>
     </bean>
 


</beans>
